{% extends 'base.html.twig' %}

{% block title %}Maps index{% endblock %}

{% block body %}
    <h1>Maps index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for map in maps %}
            <tr>
                <td>{{ map.id }}</td>
                <td style="background: {{ map.color }}">{{ map.title }}</td>
                <td>{{ map.content }}</td>
                <td>{{ map.createdAt ? map.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('maps_show', {'id': map.id}) }}">show</a>
                    <a href="{{ path('maps_edit', {'id': map.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('maps_new') }}">Create new</a>
{% endblock %}
